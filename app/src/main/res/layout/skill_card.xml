<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trim"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp">

    <ImageView
        android:id="@+id/skill_card_bounds"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:background="@color/darkerBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/skill_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="1dp"
        app:layout_constraintEnd_toStartOf="@id/skill_name"
        app:layout_constraintStart_toStartOf="@id/skill_card_bounds"
        app:layout_constraintTop_toTopOf="@id/skill_card_bounds" />

    <TextView
        android:id="@+id/skill_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sample item name"
        android:textAlignment="center"
        android:textColor="@color/orangeSkillText"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/skill_card_bounds"
        app:layout_constraintStart_toEndOf="@+id/skill_icon"
        app:layout_constraintTop_toTopOf="@id/skill_card_bounds"
        app:layout_constraintBottom_toBottomOf="@id/skill_card_bounds"/>

</androidx.constraintlayout.widget.ConstraintLayout>